<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Кино програма</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body  style="overflow:scroll">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("КИНО", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Сите филмови", "Index", "Movies")</li>
                    <li>@Html.ActionLink("Распоред", "Index", "TimeTables")</li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                    {
                        <li>@Html.ActionLink("Резервации", "Index", "Reservations")</li>
                    }
                    @if (User.IsInRole("User"))
                    {
                        <li>@Html.ActionLink("Мои резервации", "PrintReservations", "Reservations")</li>
                    }
                    <li>@Html.ActionLink("Контакт", "Contact", "Home")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Жанрови", "Index", "Genres")</li>
                        <li>@Html.ActionLink("Сали", "Index", "Halls")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
   
    <div>
        <div class="col-md-2"  >
           
        </div>
        <div class="col-md-8">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year </p>
            </footer>
        </div>
        <div class="col-md-2">
          
        </div>
    </div>
    
    <div class="container body-content" >
      
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datePicker")
    @RenderSection("scripts", required: false)
</body>
</html>

